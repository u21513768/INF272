@model IEnumerable<ClassActivity.Models.Priority>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PriorityDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PriorityDescription)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PriorityID }, new { @class = "btn btn-success btn-xs" }) 
            @Html.ActionLink("Details", "Details", new { id=item.PriorityID }, new { @class = "btn btn-warning btn-xs" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.PriorityID }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
