@model INF272SemesterTest2SectionB.Models.RatingRangeViewModel

@{
    ViewBag.Title = "Question03_Ratings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Question 03 Best Authors</h2>

<table class="table table-condensed table-hover">
    <thead style="position: sticky;top: 0">
        <tr>
            <th width="25%">Author ID</th>
            <th width="25%">Author Last Name</th>
            <th width="25%">Author First Name</th>
            <th width="25%" style="text-align:center">AUTHOR RATING</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Authors)
            {
            <tr>
                <td>@author.AuthorID</td>
                <td>@author.AuthorLastName</td>
                <td>@author.AuthorFirstName</td>
                <td style="text-align:center">@Math.Round(author.Ratings.Average(zz => zz.Rating), 2)</td> @*Unedit this line to ensure functionality.*@
            </tr>
            }
    </tbody>
</table>
<form onsubmit="backFunction()">
    <p style="text-align:right">
        <input type="submit" value="Back to Previous Page" class="btn btn-primary" style="text-align:right" />
    </p>
</form>

<script type="text/javascript">
    function backFunction() {
        $(document).on('click', '#backLink', function () {
            history.go(-1);
        });
    }
</script>

